<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.wordsdict">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.project.wordsdict.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_blue"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_blue"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup,icon,theme,label,android:roundIcon"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.project.wordsdict.main.views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.wordsdict.main.views.LearningActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name="com.project.wordsdict.main.views.TranslationActivity" />
        <activity
            android:name="com.project.wordsdict.main.views.MenuActivity"
            android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name="com.project.wordsdict.main.views.AboutActivity" />

    </application>

</manifest>