<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5C6BC0</item>
        <item name="colorPrimaryDark">#283593</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
     </style>
    <style name="InputHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MenuTextAppearance" >
        <item name="android:fontFamily">@font/custom_font3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomNavTextAppearance" >
        <item name="android:fontFamily">@font/custom_font3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/custom_font3</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/white</item>
    </style>



</resources>
